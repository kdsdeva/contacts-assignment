{% extends 'base.html.twig' %}

{% block title %}Contacts{% endblock %}

{% block body %}
    {% block content %}
        <div class="container-fluid h-100 row justify-content-center align-items-start p-3">
            <h3 class="mb-3">Contacts</h3>
            <div class="contact-view card col-md-8 p-4  shadow mb-4">
                <h5 class="py-3" style="border-bottom: 1px solid lightgray">Contact Details</h5>
                <div class="row p-3">
                    <div class="col-md-6 form-group">
                        <label class="form-label">
                            Title
                        </label>
                        <div class="form-control">{{ contact.title }}</div>
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="form-label">
                            Firstname
                        </label>
                        <div class="form-control">{{ contact.firstname }}</div>
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="form-label">
                            Lastname
                        </label>
                        <div class="form-control">{{ contact.lastname }}</div>
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="form-label">
                            Email
                        </label>
                        <div class="form-control">{{ contact.email }}</div>
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="form-label">
                            Mobile Number
                        </label>
                        <div class="form-control">{{ contact.mobileNumber }}</div>
                    </div>
                    <div class="col-md-6 form-group">
                        <label class="form-label">
                            Mobile Number
                        </label>
                        <div class="form-control">{{ contact.address }}</div>
                    </div>
                </div>
                <div class="col-md-12 row justify-content-end py-3">
                    <a class="col-md-2 contact-btn" href="{{ path('contactslist') }}">Back to list</a>
                    <a class="col-md-2 btn-save" href="{{ path('edit_contact', {'id': contact.id}) }}">Edit</a>
                    <button type="button" class="contact-delete col-md-2" data-toggle="modal" data-target="#exampleModalCenter">
                        Delete
                    </button>
                </div>
            </div>
        </div>
        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Confirm Delete</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p style="color: black">Are you sure, You want to delete the contact?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <form method="POST" action="{{ path('delete_contact', {'id': contact.id}) }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact.id) }}">
                            <button class="contact-btn" type="submit">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
{% endblock %}
