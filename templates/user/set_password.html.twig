<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Contact Admin - Reset Password</title>
    <link
            href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
            rel="stylesheet">
    {{ encore_entry_link_tags('app') }}

</head>

<body class="bg-gradient-primary">

<div class="container">
    <div class="row justify-content-center align-items-center" style="min-height: 100vh">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                {% for message in app.flashes('success') %}
                                    <div class="p-1">
                                        <div class="alert alert-success">
                                            {{ message }}
                                        </div>
                                    </div>
                                {% endfor %}
                                {% for message in app.flashes('failed') %}
                                    <div class="p-1">
                                        <div class="alert alert-danger">
                                            {{ message }}
                                        </div>
                                    </div>
                                {% endfor %}
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-2">Set New Password</h1>
                                </div>
                                {{ form_start(forgotpassword,{ 'attr': {'novalidate': 'novalidate','class':'setpassword_form'}}) }}
                                <div class="form-group py-4">
                                    <div class="mb-3">
                                        {{ form_widget(forgotpassword.plainPassword.first ) }}
                                        {{ form_errors(forgotpassword.plainPassword.first) }}
                                    </div>
                                    <div class="mb-3">
                                        {{ form_widget(forgotpassword.plainPassword.second) }}
                                        {{ form_errors(forgotpassword.plainPassword.second) }}
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-user btn-block">
                                        Reset Password
                                    </button>
                                </div>

                                {{ form_end(forgotpassword) }}
                                <hr>
                                <div class="text-center">
                                    <a class="small" href="{{ path('app_login') }}">Login!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{ encore_entry_script_tags('app') }}
</body>

</html>